<RelativeLayout
    android:id="@+id/bluetoothRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_sfondo_grigio_xml"
    tools:context="it.playfellas.superapp.ui.master.bluetooth.BluetoothActivity">


    <Button
        android:id="@+id/gameSelectorButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/rightButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/_tasto_avanti"/>


    <RelativeLayout
        android:id="@+id/leftRelativeLayout"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/downButton"
        android:layout_below="@+id/upButton"
        android:layout_centerHorizontal="true">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/pairedDevicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="6dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/newDevicesDevicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="80dp"
            android:layout_below="@+id/newDevicesTextView"
            android:layout_alignStart="@+id/pairedDevicesRecyclerView"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/newDevicesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:text="Tablet trovati"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange"
            android:layout_below="@+id/pairedDevicesRecyclerView"
            android:layout_alignStart="@+id/pairedDevicesRecyclerView"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:text="Tablet accoppiati"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange"/>

        <Button
            android:id="@+id/scanButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/_tasto_rigioca"
            android:layout_alignBottom="@+id/newDevicesTextView"
            android:layout_toEndOf="@+id/newDevicesTextView"/>


    </RelativeLayout>

    <Button
        android:id="@+id/leftButton"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/_bt_border_button"
        android:enabled="true"
        android:text=""
        android:visibility="invisible"/>

    <Button
        android:id="@+id/downButton"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/_bt_border_button"
        android:enabled="true"
        android:text=""
        android:visibility="invisible"/>

    <Button
        android:id="@+id/rightButton"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/_bt_border_button"
        android:enabled="true"
        android:text=""
        android:visibility="invisible"/>

    <Button
        android:id="@+id/upButton"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/_bt_border_button_up"
        android:enabled="true"
        android:text=""/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/_tasto_indietro"
        android:layout_alignBottom="@+id/downButton"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
